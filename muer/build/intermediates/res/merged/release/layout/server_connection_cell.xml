<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    android:padding="10dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:padding="15dp">

        <TextView
            android:id="@+id/portNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port Number"
            android:textColor="@color/white"
            android:layout_alignLeft="@+id/gameName"
            android:layout_alignStart="@+id/gameName"
            android:layout_alignTop="@+id/gameName"
            android:layout_alignParentStart="false" />

        <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Name"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/hostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Host Name"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gameName"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/gameName" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/removeServerButton"
            android:background="@drawable/roundedpink"
            android:layout_toRightOf="@+id/hostName"
            android:layout_toEndOf="@+id/portNumber"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

</RelativeLayout>